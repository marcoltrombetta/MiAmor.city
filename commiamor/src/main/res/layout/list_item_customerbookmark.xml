<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:descendantFocusability="blocksDescendants"
   >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:descendantFocusability="blocksDescendants"
        android:orientation="vertical" android:layout_weight="0.5"
        android:paddingLeft="10dp">


        <TextView
            android:id="@+id/customerbookmarkvendorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a"
            android:focusable="false" android:layout_weight="0"
            />

        <TextView
            android:id="@+id/customerbookmarkvendorPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            />

    <TextView
        android:id="@+id/customerbookmarkvendorAddress"
        android:layout_width = "match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text="" android:layout_weight="0"
        />
    </LinearLayout>
 </LinearLayout>